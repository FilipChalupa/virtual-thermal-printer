{
	"version": "0.0.24",
	"fmt": {
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"exclude": [
			"fixtures"
		]
	},
	"lint": {
		"exclude": [
			"fixtures"
		]
	},
	"imports": {
		"hono": "jsr:@hono/hono@^4.6.5",
		"hono/cors": "jsr:@hono/hono@^4.6.5/cors",
		"hono/deno": "jsr:@hono/hono@^4.6.5/deno",
		"@std/cli/parse-args": "jsr:@std/cli@^1.0.0/parse-args",
		"@std/assert/mod.ts": "https://deno.land/std@0.218.2/assert/mod.ts",
		"iconv-lite": "https://esm.sh/iconv-lite@0.6.3",
		"@std/io/buffer": "https://deno.land/std@0.224.0/io/buffer.ts",
		"imagescript": "https://deno.land/x/imagescript@v1.2.14/mod.ts",
		"@std/encoding/base64": "jsr:@std/encoding@^0.224.0/base64",
		"@std/path/join": "jsr:@std/path@^1.0.0/join",
		"esbuild": "https://deno.land/x/esbuild@v0.20.2/mod.js",
		"@std/fs": "https://deno.land/std@0.224.0/fs/mod.ts"
	},
	"tasks": {
		"start": "deno run --allow-net --allow-read --allow-env main.ts",
		"dev": "deno task build:watch & deno run --allow-net --allow-read --allow-env --watch=main.ts,escpos.ts,escpos-transform.ts,shared/types.ts main.ts --http 8000",
		"escpos_test": "deno test --allow-net escpos.test.ts",
		"test": "deno test --allow-net --allow-run --allow-read",
		"check": "deno check main.ts escpos.ts escpos.test.ts escpos-transform.ts",
		"fmt": "deno fmt",
		"lint": "deno lint",
		"compile": "deno task build && deno compile --allow-net --allow-read --allow-env --include dist --include deno.json -o virtual-thermal-printer main.ts",
		"version": "deno run --allow-read --allow-write --allow-run scripts/version.ts",
		"build": "deno run --allow-net --allow-read --allow-write --allow-run --allow-env scripts/build.ts --production",
		"build:watch": "deno run --allow-net --allow-read --allow-write --allow-run --allow-env=ESBUILD_BINARY_PATH,XDG_CACHE_HOME,HOME,NPM_CONFIG_REGISTRY --watch=public/ scripts/build.ts"
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"deno.ns"
		]
	}
}
